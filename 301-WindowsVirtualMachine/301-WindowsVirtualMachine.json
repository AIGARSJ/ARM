{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Please define Virtual Machine Name"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "admin",
            "metadata": {
                "description": "Please define administrator name"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Please define password for administrator account"
            }
        },
        "Location": {
            "type": "string",
            "metadata": {
                "description": "Specify location for your resources"
            }
        },
        "VMSize": {
            "type": "string",
            "allowedValues": [
                "Standard_B2s",
                "Standard_B2ms"
            ],
            "metadata": {
                "description": "Specity VM Size"
            }
        }
    },
    "functions": [],
    "variables": {
        "VMName":   "[concat(parameters('VirtualMachineName'),'-VM')]",
        "VMOSDISK": "[concat(parameters('VirtualMachineName'),'-OSDisk')]",
        "VMVNIC":   "[concat(parameters('VirtualMachineName'),'-vNIC')]"
    },
    "resources": [
        {
            "name": "[variables('VMName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('Location')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('VMName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter-smalldisk",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('VMOSDISK')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VMVNIC'))]"
                        }
                    ]
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/virtualMachines',variables('VMName'))]"
                }
            }
        }
    ],
    "outputs": {}
}